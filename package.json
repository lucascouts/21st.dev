{
  "name": "@lucascouts/21st.dev",
  "version": "1.0.0",
  "type": "module",
  "description": "Magic MCP UI builder - Secure MCP server for 21st.dev component generation",
  "homepage": "https://21st.dev/magic",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucascouts/21st.dev.git"
  },
  "bin": {
    "magic": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "UI",
    "frontend",
    "21st.dev",
    "magic",
    "kiro"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "build:node": "tsc && shx chmod +x dist/*.js",
    "build:prod": "bun run build && bun test",
    "debug": "bun run build && npx @modelcontextprotocol/inspector bun dist/index.js DEBUG=true",
    "start": "bun dist/index.js",
    "start:node": "node dist/index.js",
    "prepare": "bun run build:prod",
    "dev": "bun --watch src/index.ts",
    "test": "bun test"
  },
  "author": "lucascouts (fork of serafim@21st.dev)",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "open": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/node": "^25.2.0",
    "@types/react": "^19.0.12",
    "fast-check": "^4.5.3",
    "nodemon": "^3.1.9",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
